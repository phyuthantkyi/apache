<!-- to upload image file to your form -->
<%= simple_form_for @product, :html => {:multipart => true } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, :input_html => {:style => 'width: 500px'} %>
    <%= f.input :price, :input_html => {:style => 'width: 500px'} %>
    <%= f.input :description, :input_html => {:style => 'width: 500px'} %>
    <%= product.stock %>
    <!-- to upload image file to your form -->
    <%= f.file_field :image %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
