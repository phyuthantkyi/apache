<h1>Advanced Search</h1>

<%= form_for @search do |f| %>
<div class="field">
  <%= f.label :keywords %><br />
  <%= f.text_field :keywords %>
</div>
<div class="field">
  <%= f.label :product_id %><br />
</div>
<div class="field">
  <%= f.text_field :price, :size => 7 %>
</div>
<div class="actions"><%= f.submit "Search" %></div>
<% end %>
